            },
            "case": {
                "type": "string",
                "description": "The case description"
            },
            "conversation_history": {
                "type": "array",
                "description": "Previous conversation history",
                "items": {
                    "type": "object",
                    "properties": {
                        "role": {
                            "type": "string"
                        },
                        "content": {
                            "type": "string"
                        }
                    }
                }
            },
            "model": {
                "type": "string",
                "description": "LLM model to use (optional)"
            }
        },
        "required": [
            "input_text",
            "case"
        ]
    },
    "cacheable": false,
    "metadata": {
        "phase": "tests_management",
        "agent_type": "test_guidance",
        "features": [
            "test_selection",
            "result_interpretation",
            "first_principles_teaching",
            "treatment_planning"
        ]
