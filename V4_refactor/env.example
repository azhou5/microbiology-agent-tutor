# MicroTutor V4 Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=false
SECRET_KEY=your-secret-key-here
LOG_LEVEL=INFO

# =============================================================================
# Database Configuration
# =============================================================================
# Set USE_GLOBAL_DB=true for production, false for local development
USE_GLOBAL_DB=true
USE_LOCAL_DB=false

# Global Database (Production)
GLOBAL_DATABASE_URL=postgresql://user:password@host:port/database

# Local Database (Development)
LOCAL_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/microbiology_feedback

# Individual Database Settings (alternative to URLs)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=microbiology_feedback
DB_USER=postgres
DB_PASSWORD=your-password

# =============================================================================
# LLM Configuration
# =============================================================================
# Set USE_AZURE_OPENAI=true for Azure OpenAI, false for Personal OpenAI
USE_AZURE_OPENAI=true

# Azure OpenAI Configuration (used when USE_AZURE_OPENAI=true)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_API_VERSION=2025-04-16
AZURE_OPENAI_O4_MINI_DEPLOYMENT=o4-mini-0416

# Personal OpenAI Configuration (used when USE_AZURE_OPENAI=false)
OPENAI_API_KEY=your-openai-api-key
PERSONAL_OPENAI_MODEL=o4-mini-2025-04-16

# =============================================================================
# Feature Flags
# =============================================================================
USE_FAISS=true
OUTPUT_TOOL_DIRECTLY=true
IN_CONTEXT_LEARNING=true
REWARD_MODEL_SAMPLING=false
FAST_CLASSIFICATION_ENABLED=false
TERMINAL_MODE=false

# =============================================================================
# Application Settings
# =============================================================================
DEFAULT_ORGANISM=staphylococcus aureus

# =============================================================================
# Vector Database (Optional)
# =============================================================================
FAISS_INDEX_PATH=data/models/faiss_indices/output_index.faiss
FAISS_DIMENSION=1536

# =============================================================================
# Qdrant (Optional)
# =============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-key

# =============================================================================
# Caching (Optional)
# =============================================================================
ENABLE_RESPONSE_CACHE=true
CACHE_TTL_SECONDS=3600
REDIS_URL=redis://localhost:6379
